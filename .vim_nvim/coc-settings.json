{
  /* this is a test */
  /* "coc.preferences.hoverTarget": "echo", */
  /* "coc.preferences.enableFloatHighlight": false, */
  "diagnostic.messageTarget": "echo",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "graphql"
  ],
  "tsserver.enableJavascript": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.preferences.quoteStyle": "double",
  "typescript.referencesCodeLens.enable": false,
  "coc.source.file.ignoreHidden": false,
  "prettier.printWidth": 160,
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "codeLens.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "git.addGBlameToVirtualText": true,
  "signature.target": "echo",
  "suggest.asciiCharactersOnly": true,
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "languageserver": {
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"],
      "initializationOptions": {
        "staticcheck": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "caseSensitiveCompletion": true
      }
    },
    "dart": {
      "command": "dart",
      "args": [
        "/usr/local/opt/dart/libexec/bin/snapshots/analysis_server.dart.snapshot",
        "--lsp"
      ],
      "filetypes": ["dart"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  }
}
