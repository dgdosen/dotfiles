echo 'on darwin and arm64 zsh'

export PATH="/opt/homebrew/opt/libxml2/bin:$PATH"
export PATH="/opt/homebrew/opt/libiconv/bin:$PATH"
export PATH="/opt/homebrew/opt/gettext/bin:$PATH"
# adding usr/local/sbin for manual crystal install
export PATH="/usr/local/bin:$PATH"

source /opt/homebrew/opt/asdf/asdf.sh

# powerlevel10k
source /opt/homebrew/opt/powerlevel10k/powerlevel10k.zsh-theme

export RBENV_ROOT=/opt/homebrew/var/rbenv

# GO specific settings
# export GOROOT="/opt/homebrew/bin/go"
# export PATH="/usr/local/go/pkg/tool/darwin_arm64:$PATH"

# NOTE: this is for puppeteer support used in react/node
export PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
export PUPPETEER_EXECUTABLE_PATH=`which chromium`

# Add pyenv executable to PATH and
# enable shims by adding the following
# to ~/.profile and ~/.zprofile:

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"

# Load pyenv into the shell by adding
# the following to ~/.zshrc:

eval "$(pyenv init -)"

# /opt/homebrew/opt/fzf/install
